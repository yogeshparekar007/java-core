<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define the Cashier bean -->
    <bean id="cashier" class="com.PS5.Cashier">
        <property name="fileName" value="checkout"/>
        <property name="path" value="checkoutFolder"/>
        <property name="initMethod" value="openFile"/>
        <property name="destroyMethod" value="closeFile"/>
    </bean>

</beans>



                         